<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medupe">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Medupe">
        <activity
            android:name=".MyPatientMedicalFolderActivity"
            android:label="@string/title_activity_my_patient_medical_folder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DoctorsBySpecialityActivity" />
        <activity
            android:name=".DoctorAppointments"
            android:label="@string/title_activity_doctor_appointments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DoctorEditProfileInfo" />
        <activity android:name=".DisplayDoctorProfileInfo" />
        <activity android:name=".MyPatientInfoActivity" />
        <activity android:name=".MyPatientsActivity" />
        <activity android:name=".DisplayPatientInfo" />
        <activity android:name=".MyDoctorInfoActivity" />
        <meta-data
                android:name="firebase_performance_logcat_enabled"
                android:value="true" />
        <activity
            android:name=".SearchDoctorSpecialityActivity"
            android:label="@string/title_activity_search_doctor_speciality"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SearchDoctorActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".SplashActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>